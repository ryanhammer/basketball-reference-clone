{
  "name": "basketball-reference-clone",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "remix-serve ./build/index.js",
    "dev:db:apply-new-migrations": "prisma migrate dev",
    "dev:db:seed": "npm run dev:db:reset && prisma db seed",
    "dev:db:reset": "prisma migrate reset --skip-seed",
    "format": "npx @biomejs/biome format --write ./app",
    "docker": "docker compose up -d",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "typecheck": "tsc"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/postgres-data"
  ],
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@remix-run/css-bundle": "^2.7.2",
    "@remix-run/node": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "@remix-run/serve": "^2.7.2",
    "date-fns-tz": "^2.0.0",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@remix-run/dev": "^2.7.2",
    "@sly-cli/sly": "^1.8.0",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^7.0.2",
    "autoprefixer": "^10.4.17",
    "binode": "^1.0.5",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "msw": "^2.2.1",
    "prisma": "^5.10.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "prisma": {
    "schema": "./db/prisma/schema.prisma",
    "seed": "tsx ./db/prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
